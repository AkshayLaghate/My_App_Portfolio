<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#deeaf1"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="My Nanodegree Apps!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/indigo_900"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo" />

    <Button
        android:id="@+id/bSpotify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/teal_400"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Popular Movies"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bScores"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bSpotify"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/teal_400"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Scores App"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bLibrary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bScores"
        android:layout_alignStart="@+id/bScores"
        android:layout_below="@+id/bScores"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/teal_400"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Library App"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bBuilditBigger"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bLibrary"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/teal_400"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Build it Bigger"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bXYZ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bBuilditBigger"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/teal_400"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="XYZ Reader"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bCapstone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bXYZ"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/indigo_500"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Capstone: My Own App"
        android:textColor="@android:color/white" />

</LinearLayout>
